<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="6dp" android:color="@android:color/holo_green_light" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <stroke android:width="6dp" android:color="@android:color/holo_red_light" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="6dp" android:color="@color/overlay_color" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>